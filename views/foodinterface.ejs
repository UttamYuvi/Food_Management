<style>
    .maincontainer {
        display: flex;
        justify-content: center;
        background-color: red;
        height: 125vh;
    }

    .root {
        width: 1000px;
        height: auto;
        background-color: #fff;
        border-radius: 5px;
    }

    .heading {
        color: red;
        font-size: 60;
        font-weight: bold;
        font-family: 'Hurricane', cursive;
        display: flex;
        justify-content: center;
        padding: 5px;
    }
</style>
<html>

<head>
    
    <!-- Import Icon  -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <!-- Import google font -->
    <link href="https://fonts.googleapis.com/css2?family=Hurricane&display=swap" rel="stylesheet">

    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $(document).ready(function () {
            $('select').formSelect();
        });
    </script>
    <script src="/javascripts/fillfood.js"></script>

</head>

<body>
    <div class="maincontainer">
        <div class="root">
            <form action="/foods/addmorerecords" method="post" enctype="multipart/form-data">
                <div class="heading">
                    <span><img src="/images/logo1.png" alt="logo" width="90px"></span> Food Inquiry

                </div>
                <hr width="34%" color="red">
                <div class="row">
                    <div class="col s6">
                        <div class="input-field">
                            <i class="material-icons prefix">restaurant</i>
                            <input id="icon_fid" name="foodlistid" type="text" class="validate">
                            <label for="icon_fid">Food List Id</label>
                        </div>
                    </div>
                    <div class="col s6">
                        <div class="input-field">
                            <i class="material-icons prefix">restaurant_menu</i>
                            <select name="category" id="category">
                                <option value="" disabled selected>Category</option>

                            </select>
                            <label for="category">Food Category</label>
                        </div>

                    </div>
                </div>
                <div class="row">
                    <div class="col s6">
                        <div class="input-field">
                            <i class="material-icons prefix">restaurant_menu</i>
                            <select name="food" id="food">
                                <option value="" disabled selected>Food</option>

                            </select>
                            <label for="category">Food Name</label>

                        </div>
                    </div>
                    <div class="col s6">
                        <span style="display: flex; justify-content: center; padding: 20px; padding-right: 150px; ">
                            <span >
                                <label>
                                    <input class="with-gap" value="veg" name="foodtype" id="veg" type="radio" />
                                    <span>Veg</span>
                                </label>
                            </span>
                            <span>
                                <label>
                                    <input name="foodtype" value="non-veg" id="non-veg" type="radio" />
                                    <span>Non-Veg</span>
                                </label>
                            </span>
                        </span>
                    </div>

                </div>
                <div class="row">
                    <div class="col s12">
                        <div class="input-field">
                            <i class="material-icons prefix">restaurant</i>
                            <input id="icon_ingredients" name="ingredients" type="text" class="validate">
                            <label for="icon_ingredients">Ingredients</label>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col s6">
                        <div class="input-field">
                            <i class="material-icons prefix">restaurant</i>
                            <input id="icon_price" name="price" type="text" class="validate">
                            <label for="icon_price">Price</label>
                        </div>
                    </div>

                    <div class="col s6">
                        <div class="input-field">
                            <i class="material-icons prefix">restaurant</i>
                            <input id="icon_offerprice" name="offerprice" type="text" class="validate">
                            <label for="icon_offerprice">Offer Price</label>
                        </div>
                    </div>

                </div>

                <div class="row">
                    <div class="col s6">
                        <div class="file-field input-field">
                            <div class="btn">
                                <span>Picture</span>
                                <input type="file" name="picture">
                            </div>
                            <div class="file-path-wrapper">
                                <input class="file-path validate" type="text">
                            </div>
                        </div>
                    </div>
                    <div class="col s6">
                        <span style="display: flex; justify-content: center; padding: 20px; padding-right: 150px;">
                            <span>
                                <label>
                                    <input class="with-gap" name="stock" value="continue" type="radio" />
                                    <span>In Stock</span>
                                </label>
                            </span>
                            <span>
                                <label>
                                    <input name="stock" value="discontinue" type="radio" />
                                    <span>Not In Stock</span>
                                </label>
                            </span>
                        </span>

                    </div>
                </div>
                <div class="row">
                    <div class="col s4" style="display: flex; justify-content:center;">

                        <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                            <i class="material-icons right">send</i>
                        </button>
                    </div>
                    <div class="col s4" style="display: flex; justify-content:center; font-size: 24; font-weight: bold;">
                    <font color="red"> <%= msg %> </font>
                    </div>
                    <div class="col s4" style="display: flex; justify-content:center;">

                        <button class="btn waves-effect waves-light" type="reset" name="action">Reset
                            <i class="material-icons right">remove</i>
                        </button>
                    </div>
                </div>

            </form>
        </div>
    </div>
</body>
<!--JavaScript at end of body for optimized loading-->
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

</html>