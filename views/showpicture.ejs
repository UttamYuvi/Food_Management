<style>
    .maincontainer {
        display: flex;
        justify-content: center;
        background-color: red;
        height: 100vh;
    }

    .root {
        width: 700px;
        height: auto;
        background-color: #fff;
        border-radius: 5px;
    }

    .heading {
        color: red;
        font-size: 60;
        font-weight: bold;
        font-family: 'Hurricane', cursive;
        display: flex;
        justify-content: center;
        padding: 5px;
    }
</style>


<html>

<head>
    <!-- Import Icon  -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <!-- Import google font -->
    <link href="https://fonts.googleapis.com/css2?family=Hurricane&display=swap" rel="stylesheet">

    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

</head>

<body>
    <div class="maincontainer">
        <div class="root">
            <form action="/foods/editpicture " method="post" enctype="multipart/form-data">
                <div class="heading">
                    <span><img src="/images/logo1.png" alt="logo" width="90px"></span> Food Inquiry

                </div>
                <hr width="34%" color="red">
                <div class="row">
                    <div class="col s12" style="display: flex; justify-content: center;">
                        <input type="hidden" value="<%=foodlistid%>" name="foodlistid">
                        <h4>
                            <%=fn%>
                        </h4>
                    </div>

                </div>
                <div class="row">
                    <div class="col s12" style="display: flex; justify-content: center;">
                        <h4>
                            <img src="/images/<%=picture%>" alt="pictures" width="180">
                        </h4>
                    </div>

                </div>
                <div class="row">
                    <div class="col s12">
                        <div class="file-field input-field">
                            <div class="btn">
                                <span>Picture</span>
                                <input type="file" name="picture">
                            </div>
                            <div class="file-path-wrapper">
                                <input class="file-path validate" type="text">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col s12" style="display: flex; justify-content:center;">

                        <button class="btn waves-effect waves-light" type="submit" name="action">Edit Picture
                            <i class="material-icons right">send</i>
                        </button>
                    </div>
                </div>
        </div>
        </form>
    </div>
    </div>
</body>

</html>